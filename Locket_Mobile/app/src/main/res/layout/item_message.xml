<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/messageAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_border"
        android:src="@mipmap/account_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Container for Message Content (Text or Image) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/messageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/messageAvatar"
        app:layout_constraintTop_toTopOf="@id/messageAvatar"
        android:layout_marginStart="8dp">

        <!-- Text Message -->
        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_background"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:maxWidth="250dp" />

        <!-- Image Message -->
<!--        <ImageView-->
<!--            android:id="@+id/messageImage"-->
<!--            android:layout_width="250dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:adjustViewBounds="true"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:background="@drawable/message_background_image"-->
<!--            android:visibility="gone"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent" />-->

        <!-- Caption for Image (optional) -->
<!--        <TextView-->
<!--            android:id="@+id/messageCaption"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="12sp"-->
<!--            android:visibility="gone"-->
<!--            app:layout_constraintStart_toStartOf="@id/messageImage"-->
<!--            app:layout_constraintTop_toBottomOf="@id/messageImage"-->
<!--            android:layout_marginTop="4dp" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Timestamp -->
    <TextView
        android:id="@+id/messageTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/messageContainer"
        app:layout_constraintTop_toBottomOf="@id/messageContainer"
        android:layout_marginTop="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>