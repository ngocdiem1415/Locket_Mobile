            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/hint_white"
            android:text="ðŸ¤©"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/add_emoji"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/add_reaction" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/flash"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/grid_view" />

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/circle_border_yellow"
            android:gravity="center">

            <View
                android:id="@+id/take"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/cached"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/pending" />
    </LinearLayout>


</LinearLayout>