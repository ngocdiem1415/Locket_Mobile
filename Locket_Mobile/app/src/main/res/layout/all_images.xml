<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/all_images"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true">

<!--    Phần top bar chứa user, dropdown danh sách bạn bè và message-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/account"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="17dp"
            android:background="@drawable/circle_border"
            android:src="@mipmap/account_icon" />

        <LinearLayout
            android:id="@+id/friends"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/circle_border"
            android:gravity="center">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:text="Tất cả bạn bè"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/message"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_border"
            android:src="@mipmap/message_circle" />
    </LinearLayout>

<!--    Danh sách ảnh theo dạng lưới-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_marginTop="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clipChildren="true"
            android:clipToPadding="true"
            app:cardCornerRadius="60dp"
            app:cardElevation="4dp">

            <TextureView
                android:id="@+id/camera_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>
        <!-- View làm border -->
        <!--        <View-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:background="@drawable/border_only"-->
        <!--            android:clickable="false" />-->
    </FrameLayout>

<!--    bottom bar chứa nút chụp hình-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/circle_border_yellow"
            android:gravity="center">

            <View
                android:id="@+id/take"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch sử"
            android:textColor="@color/white"
            android:textSize="26dp" />

        <ImageView
            android:id="@+id/down_toggle"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@mipmap/down_toggle" />

    </LinearLayout>


</LinearLayout>