<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/account"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="17dp"
                android:background="@drawable/circle_border"
                android:src="@mipmap/account_icon" />

            <LinearLayout
                android:id="@+id/all_friends"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/circle_border"
                android:gravity="center">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="Tất cả bạn bè"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/down_toggle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/down_toggle" />
            </LinearLayout>

            <ImageView
                android:id="@+id/message"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_border"
                android:src="@mipmap/message_circle" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/metro" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/react_emoji_comment"
            android:layout_width="365dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/circle_border"
            android:gravity="center">

            <TextView
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:hint="Gửi tin nhắn ..."
                android:textColor="#ffffff"
                android:textColorHint="@color/light_gray"
                android:textFontWeight="@integer/material_motion_duration_long_2"
                android:textSize="22dp" />

            <androidx.emoji2.widget.EmojiButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/hint_white"
                android:text="❤️"
                android:textSize="28sp" />

            <androidx.emoji2.widget.EmojiButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/hint_white"
                android:text="😊"
                android:textSize="28sp" />

            <androidx.emoji2.widget.EmojiButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/hint_white"
                android:text="🤩"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/add_emoji"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/add_reaction" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/flash"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/grid_view" />

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/circle_border_yellow"
                android:gravity="center">

                <View
                    android:id="@+id/take"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_white" />
            </LinearLayout>

            <ImageView
                android:id="@+id/cached"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/pending" />
        </LinearLayout>
    </LinearLayout>

    <!-- Lớp phủ bán trong suốt -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" /> <!-- màu đen với độ mờ 50% -->

    <LinearLayout
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="240dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/dark_gray_border">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_friends"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>